<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Name="Fluent">
    
    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" x:Key="controllerBarGradient">
        <GradientStop Color="#494951" Offset="0"/>
        <GradientStop Color="#35353a" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" x:Key="headerGradient">
        <GradientStop Color="#404244" Offset="0"/>
        <GradientStop Color="#232526" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" x:Key="sidebarGradient">
        <GradientStop Color="#404244" Offset="0"/>
        <GradientStop Color="#232526" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" x:Key="mainBackground">
        <GradientStop Color="#1b1b1e" Offset="0"/>
        <GradientStop Color="#1b1b1e" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="roundedButtonHighlight" Color="#7F343945"/>
    <SolidColorBrush x:Key="detailButtonColor" Color="#616467"/>
    <SolidColorBrush x:Key="detailButtonHighlight" Color="#959a9e"/>
    <SolidColorBrush x:Key="normalButtonColor" Color="#6a758d"/>
    <SolidColorBrush x:Key="textColor" Color="White"/>
    <SolidColorBrush x:Key="controllerOptionMenuBackground" Color="#2C2C2C"/>
</ResourceDictionary>