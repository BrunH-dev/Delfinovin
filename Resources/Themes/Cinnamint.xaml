<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Name="Cinnamint">
    
    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" x:Key="controllerBarGradient">
        <GradientStop Color="#29372D" Offset="0"/>
        <GradientStop Color="#29382E" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" x:Key="headerGradient">
        <GradientStop Color="#1C292A" Offset="0"/>
        <GradientStop Color="#1A271A" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" x:Key="sidebarGradient">
        <GradientStop Color="#1C292A" Offset="0"/>
        <GradientStop Color="#1C292A" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" x:Key="mainBackground">
        <GradientStop Color="#6A9287" Offset="0"/>
        <GradientStop Color="#6A9287" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="roundedButtonHighlight" Color="#7F344537"/>
    <SolidColorBrush x:Key="detailButtonColor" Color="#36493C"/>
    <SolidColorBrush x:Key="detailButtonHighlight" Color="#6F967B"/>
    <SolidColorBrush x:Key="normalButtonColor" Color="#65987C"/>
    <SolidColorBrush x:Key="textColor" Color="White"/>
    <SolidColorBrush x:Key="controllerOptionMenuBackground" Color="#2C2C2C"/>
</ResourceDictionary>