    <None Remove="Resources\Icons\button-cursor.png" />
    <None Remove="Resources\Icons\Buttons\Control Stick Clockwise.png" />
    <None Remove="Resources\Icons\controller-plugged.png" />
    <None Remove="Resources\Icons\controller-unplugged.png" />
    <None Remove="Resources\Icons\donate-support.png" />
    <None Remove="Resources\Icons\faq-support.png" />
    <None Remove="Resources\Icons\gamepad-buttons.png" />
    <None Remove="Resources\Icons\github.png" />
    <None Remove="Resources\Icons\home.png" />
    <None Remove="Resources\Icons\ko-fi.png" />
    <None Remove="Resources\Icons\patreon.png" />
    <None Remove="Resources\Icons\paypal.png" />
    <None Remove="Resources\Icons\pencil.png" />
    <None Remove="Resources\Icons\profiles.png" />
    <None Remove="Resources\Icons\settings.png" />
    <None Remove="Resources\Icons\window-close.png" />
    <None Remove="Resources\Icons\window-minimize.png" />
  </ItemGroup>

  <ItemGroup>
    <COMReference Include="IWshRuntimeLibrary">
      <WrapperTool>tlbimp</WrapperTool>
      <VersionMinor>0</VersionMinor>
      <VersionMajor>1</VersionMajor>
      <Guid>f935dc20-1cf0-11d0-adb9-00c04fd58a0b</Guid>
      <Lcid>0</Lcid>
      <Isolated>false</Isolated>
      <EmbedInteropTypes>true</EmbedInteropTypes>
    </COMReference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MaterialDesignThemes" Version="4.6.1" />
    <PackageReference Include="Nefarius.Drivers.WinUSB" Version="4.1.71" />
    <PackageReference Include="Nefarius.Utilities.DeviceManagement" Version="3.3.196" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Icons\arrow-down.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Icons\app.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Icons\arrow-up.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
