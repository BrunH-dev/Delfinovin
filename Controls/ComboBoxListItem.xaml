<UserControl x:Class="Delfinovin.Controls.ComboBoxListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Delfinovin.Controls"
             mc:Ignorable="d">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label x:Name="itemText" 
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Foreground="White" FontFamily="Lato Light"
               Content="{Binding ItemText}" FontSize="14"/>

        <ComboBox x:Name="comboBox"
            Grid.Column="1"
            Style="{DynamicResource MaterialDesignFilledComboBox}"
            Width="200"
            SelectedIndex="{Binding SelectedIndex}"
            SelectedItem="{Binding SelectedItem}"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Background="{DynamicResource appSettingToggleColor}" 
            Margin="10,0,0,0" ItemsSource="{Binding Items}" BorderBrush="Black"/>

    </Grid>
</UserControl>
